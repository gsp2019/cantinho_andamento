<!doctype html>
<html lang="en" data-bs-theme="auto">
<head>
    <script src="/javascripts/color-modes.js"></script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cantinho do Sabor</title>

    <!-- Bootstrap CSS -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link href="/stylesheets/carousel.css" rel="stylesheet">

    <!-- Custom Styles -->
    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }

        /* Header styling */
        header {
            background-color: darkred;
            color: white;
            padding: 1rem 2rem; /* Ajuste o padding conforme necessário */
        }

        /* Logo sizing */
        .logo {
            max-height: 150px; /* Ajuste para o tamanho ideal */
            width: auto; /* Mantém a proporção da imagem */
        }

        header h1, header h2 {
            margin: 0;
        }

        /* Form container */
        .form-container {
            margin: 2rem auto;
            max-width: 600px;
        }

        .form-container label {
            margin-top: 0.5rem;
        }

        /* Footer styling */
        footer {
            background-color: var(--bs-dark); /* Responsivo ao modo escuro */
            color: var(--bs-light);
            padding: 1.5rem 0;
            font-size: 0.9rem;
        }
    </style>
</head>

<header class="d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center">
        <!-- Logo clicável com ajuste de tamanho -->
        <a href="/">
            <img src="/images/logo.png" alt="Logo do Cantinho do Sabor" class="logo">
        </a>        
        <div>
            <h1>Cantinho do Sabor</h1>
            <h2>Sabor & Tradição</h2>
        </div>
    </div>
    <div>
        <button class="btn btn-primary" onclick="window.location.href='/Dashboard'">Área do Administrador</button>
    </div>
</header>

<body>
<!-- Reservation Form -->
<div class="form-container">
    <form id="form-reserva" action="/api/reservas" method="POST">
        <label for="nome">Nome:</label>
        <input type="text" class="form-control" id="nome" name="nome" required>

        <label for="telefone">Telefone:</label>
        <input type="text" class="form-control" id="telefone" name="telefone" required>

        <label for="pessoas">Número de Pessoas:</label>
        <input type="number" class="form-control" id="pessoas" name="pessoas" required min="1">

        <label for="data">Data:</label>
        <input type="date" class="form-control" id="data" name="data" required>

        <label for="hora">Horário:</label>
        <input type="time" class="form-control" id="hora" name="hora" required>

        <label for="observacoes">Observações:</label>
        <textarea id="observacoes" class="form-control" name="observacoes" rows="4" placeholder="Alguma observação especial?"></textarea>

        <button class="btn btn-primary" onclick="window.location.href='/'">Fazer Reservaa!</button>
    </form>
</div>

<footer class="text-center mt-4 py-3">
    <p>Aguardamos sua visita!<br>
       Rua Ipanema, 1243 - Rio de Janeiro<br>
       Telefone: (75) 98898-8547</p>
</footer>

<!-- Bootstrap Bundle with Popper -->
<script src="/javascripts/bootstrap.bundle.min.js"></script>

</body>
</html>
